<div class="inventory-domain-tables">
  {{#if this.fetchDomains.isRunning}}
    <AuLoader @hideMessage={{true}} />
  {{else}}
    {{#each this.domains as |domain|}}
      <div>
        <Inventory::CollapsibleDomainTable
          @domain={{domain}}
          @isCollapsedOnLoad={{false}}
          @onDomainDeleted={{perform this.fetchDomains}}
        />
      </div>
    {{/each}}
  {{/if}}
</div>