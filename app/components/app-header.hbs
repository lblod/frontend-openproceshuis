<AuMainHeader
  @brandLink="https://www.vlaanderen.be/nl"
  @homeRoute="index"
  @appTitle={{config "appName"}}
>
  {{#if this.session.isAuthenticated}}
    <AuDropdown
      @title={{this.currentSession.title}}
      @buttonLabel="Account settings"
      @alignment="right"
      role="menu"
    >
      {{! disabled for now as there seems to be an issue with the post logout redirect uri }}
      {{! once it's fixed on acm idm side, we should uncomment this }}
      {{! <AuLink @route="auth.switch" @icon="switch" role="menuitem"> }}
      {{!   Wissel van bestuurseenheid }}
      {{! </AuLink> }}
      <AuLink @route="auth.logout" @icon="logout" role="menuitem">
        Afmelden
      </AuLink>
    </AuDropdown>
  {{else}}
    <LoginButton @isCompact={{true}} />
  {{/if}}
</AuMainHeader>
