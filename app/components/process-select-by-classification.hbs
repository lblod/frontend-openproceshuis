<div class={{if @error "ember-power-select--error"}} ...attributes>
  <PowerSelectMultiple
    @searchEnabled={{true}}
    @searchField="label"
    @loadingMessage="Aan het laden..."
    @noMatchesMessage="Geen resultaten"
    @options={{this.classifications}}
    @selected={{@selected}}
    @onChange={{@onChange}}
    @triggerId={{@id}}
    as |classification|
  >
    {{classification.label}}
  </PowerSelectMultiple>
</div>