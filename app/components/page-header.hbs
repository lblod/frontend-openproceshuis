<header ...attributes>
  {{#if (has-block "action")}}
    <AuToolbar @border="bottom" @size="medium" @nowrap={{true}} as |Group|>
      <Group>
        <div>
          <AuHeading>
            {{yield to="title"}}
          </AuHeading>
          {{#if (has-block "subtitle")}}
            <AuHeading @level="3" @skin="6" class="au-u-margin-top-tiny">
              {{yield to="subtitle"}}
            </AuHeading>
          {{/if}}
        </div>
      </Group>
      <Group class="au-c-toolbar__action">
        {{yield to="action"}}
      </Group>
    </AuToolbar>
  {{else if (has-block "alert")}}
    <AuToolbar @size="large" as |Group|>
      <Group>
        <AuHeading class="au-u-margin-right">
          {{yield to="title"}}
        </AuHeading>
      </Group>
      <Group>
        {{yield to="alert"}}
      </Group>
    </AuToolbar>
  {{else}}
    <AuHeading>
      {{yield to="title"}}
    </AuHeading>
  {{/if}}

</header>