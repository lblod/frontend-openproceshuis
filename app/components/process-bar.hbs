<AuToolbar @border="bottom" @skin="tint" class="au-c-navigation" as |Group|>
  <Group>
    <AuTabs @reversed={{this.reversed}} as |Tab|>
      {{#if this.currentSession.isAuthenticated}}
        <Tab>
          <AuLink @route="processes" @icon="sitemap">
            Alle processen
          </AuLink>
        </Tab>
      {{/if}}
      {{#if this.isProcessenMijnBestuurShown}}
        <Tab>
          <AuLink @route="my-local-government" @icon="users-four-of-four">
            Processen mijn bestuur
          </AuLink>
        </Tab>
      {{/if}}
      {{#if this.currentSession.canEdit}}
        <Tab>
          <AuLink @route="shared-processes" @icon="unordered-list">
            Gedeelde processen
          </AuLink>
        </Tab>
      {{/if}}
      <Tab>
        <AuLink @route="inventory.index" @icon="folder">
          Inventaris processen
        </AuLink>
      </Tab>
      <Tab>
        <AuLink @route="information-assets.index" @icon="folder">
          Informatie assets
        </AuLink>
      </Tab>
    </AuTabs>
  </Group>
  <Group>
    <AuTabs @reversed={{this.reversed}} as |Tab|>
      {{#if (and this.currentSession.isAdmin this.currentRouteIsInventory)}}
        <Tab>
          <AuLink @route="inventory.admin">
            Beheer
          </AuLink>
        </Tab>
      {{/if}}
    </AuTabs>
  </Group>
</AuToolbar>